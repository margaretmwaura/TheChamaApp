<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="50dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AMemberDetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_label"
        android:text="Member Email Address"/>
    <TextView
        android:layout_toRightOf="@+id/email_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_text_view"/>
    <TextView
        android:layout_below="@+id/email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/member_id_label"
        android:text="Member membershipId"/>
    <TextView
        android:layout_toRightOf="@+id/member_id_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/membershipID_textview"
        android:layout_below="@+id/email_text_view"/>
    <TextView
        android:layout_below="@+id/member_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contribution_label"
        android:text="Member contribution"/>
    <TextView
        android:layout_below="@+id/membershipID_textview"
        android:layout_toRightOf="@+id/member_id_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contribution"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attendance_label_textView"
        android:layout_below="@id/contribution_label"
        android:text="Member Attendance"/>
    <TextView
        android:layout_toRightOf="@+id/attendance_label_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contribution"
        android:id="@+id/attendance_textView"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attendance_textView"
        android:id="@+id/edit_member_data_button"
        android:text="Edit"/>

</RelativeLayout>