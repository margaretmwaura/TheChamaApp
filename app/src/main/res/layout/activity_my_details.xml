<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyDetails">

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/general_info">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFF"/>


        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Your name"
            android:id="@+id/textview_username"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:gravity="center"
            android:id="@+id/textView_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your email address" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:id="@+id/textView_membershipId_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your membership ID" />
        <TextView
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/textView_membershipId_label"
            android:gravity="center"
            android:id="@+id/textView_membershipId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
        <TextView
            android:layout_marginTop="25dp"
            android:layout_below="@+id/textView_membershipId_label"
            android:gravity="center"
            android:id="@+id/textView_contribution_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your contributions" />
        <TextView
            android:layout_marginTop="25dp"
            android:layout_below="@+id/textView_membershipId"
            android:gravity="center"
            android:id="@+id/textView_contribution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView_contribution_label"
             />
        <TextView
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layout_below="@+id/textView_contribution_label"
            android:id="@+id/textView_attendance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your attendance" />
        <TextView
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layout_below="@+id/textView_contribution"
            android:id="@+id/textView_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView_attendance_label" />


    </RelativeLayout>

</LinearLayout>