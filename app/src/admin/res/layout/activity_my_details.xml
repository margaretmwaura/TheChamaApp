<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyDetails">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Hello :"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/welcome_textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


    <TextView
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your membership details" />
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:id="@+id/textView_membershipId_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Membership ID" />
        <TextView
            android:textColor="#000"
            android:textSize="16dp"
            android:background="@drawable/button_transparent"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/textView_membershipId_label"
            android:gravity="center"
            android:id="@+id/textView_membershipId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
        <TextView
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/textView_membershipId_label"
            android:gravity="center"
            android:id="@+id/textView_contribution_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contributions" />
        <TextView
            android:textColor="#000"
            android:textSize="16dp"
            android:background="@drawable/button_transparent"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/textView_membershipId"
            android:gravity="center"
            android:id="@+id/textView_contribution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView_contribution_label"
             />
        <TextView
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layout_below="@+id/textView_contribution_label"
            android:id="@+id/textView_attendance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="attendance" />
        <TextView
            android:textColor="#000"
            android:textSize="16dp"
            android:background="@drawable/button_transparent"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layout_below="@+id/textView_contribution"
            android:id="@+id/textView_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView_attendance_label"
            android:layout_marginBottom="50dp"/>


    </RelativeLayout>

    <!--Now this is the part i will insert the pie chart-->

    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>